<%- include("header") -%>

<body>

  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box">
    <% for(var i = 0; i < newListItems.length; i++){ %>

    <div class="item">
      <input type="checkbox">
      <p><%= newListItems[i] %></p>
    </div>

    <% } %>

    <form action="/" method="post">
      <input type="text" name="itemBox" placeholder="New Item" autocomplete="off" autofocus>
      <button type="submit" name="addButton" value="<%= listTitle %>">+</button>
    </form>
    <form class="reloadForm" action="/reload" method="post">
      <button class="reloadButton" type="submit" name="reloadButton" value="<%= listTitle %>">‚ü≥</button>
    </form>
  </div>

  <%- include("footer") -%>
</body>


</html>
